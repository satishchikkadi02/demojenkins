pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                sh '''
                date
                pwd
                '''
            }
        }
        stage('Build') {
            steps {
                echo 'build'
            }
        }
        stage('Deploy on test') {
            steps {
                echo 'Deploy on test'
            }
        }
        stage('Deploy on prod') {
            steps {
                echo 'Deploy on prod'
            }
        }
    }
    post { 
        always { 
            echo 'I will always say Hello again!'
        }
        failure{
            echo 'Failure'
        }
        success{
            echo 'Success'
        }
    }
}
